!!! Rofi window options
rofi.opacity:                        80
rofi.width:                          40
rofi.columns:                        1
rofi.font:                           Meslo LG S for Powerline 12

! Border width and padding
rofi.bw:                             1
rofi.padding:                        5


!!! Rofi colors
! Color scheme for normal row
rofi.color-normal:                   #282828,#ebdbb2,#353535,#458588,#ebdbb2


! Color scheme for urgent row
rofi.color-urgent:                   #282828,#d79921,#353535,#d79921,#282828

! Color scheme for active row
rofi.color-active:                   #282828,#ebdbb2,#353535,#458588,#ebdbb2

! Color scheme window
rofi.color-window:                   #282828,#458488


! Terminal to use
rofi.terminal:                       urxvt

! Disable history in run/ssh
rofi.disable-history:                false

! Use levenshtein sorting
rofi.levenshtein-sort:               true

! Fuzzy search
rofi.fuzzy:                          true

! Set case-sensitivity
rofi.case-sensitive:                 false

! Cycle through the results list
rofi.cycle:                          true

! Parse known_hosts file for ssh mode
rofi.parse-known-hosts:              true

! Hide scroll-bar
rofi.hide-scrollbar:                 true

! Fullscreen
rofi.fullscreen:                     false

! Fake transparency
rofi.fake-transparency:              false

!!! Hotkeys

! Close
rofi.kb-cancel:                      Escape,Control+c
